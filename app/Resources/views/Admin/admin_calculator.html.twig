{% set body_parameters = 'ng-app="ngAnimate"'%}

{% extends 'admin_nav.html.twig' %}

{% block title %} - Calculator Settings{% endblock %}

{% block content %}

    <div class="col-xs-12" ng-app="ngAnimate">
        <div class="row">
            
            {# working condition segment #}
            <div class="well no-margin">
                <div class="col-xs-12 overlay-position workingcondition-group">
                    
                    {# angular input form #}
                    <div class="overlay-show" ng-show="toggle1">
                        <div class="col-xs-12 col-sm-3 col-md-3">
                            <p class="visible-xs visible-sm pull-left">Working condition:</p>

                            <p class="hidden-xs hidden-sm pull-right">Working condition:</p>
                        </div>

                        <div class="col-xs-12 col-sm-9 col-md-6">
   
                            {{ form_start(form, {'attr': {'id': 'task'}}) }}

                                {% for form in form.forms %}
                                
                            <div class="row">
                                <span class="col-xs-3">
                                    <p><strong>{{ form.vars.data.workingcondition }}</strong></p>
                                </span>

                                {% form_theme form ':Form:workingcondition_form.html.twig' %}

                                <span class="col-xs-3">
                                    {{ form_row(form.multiplier) }}
                                </span>

                                <span class="col-xs-3">
                                    <p class="pull-right">
                                        default
                                    </p>
                                </span>

                                <span class="col-xs-3">
                                    <div class="pull-left">
                                        {{ form_row(form.isDefault) }}
                                    </div>
                                </span>

                            </div>

                                {% endfor %}                  

                            {{ form_end(form) }}

                        </div>

                        <div class="visible-xs visible-sm row">
                            <div class="col-xs-12 col-sm-12 col-md-3 margin-top-10">
                                <div class="col-xs-6 col-sm-6 col-md-12 margin-10">
                                    <button ng-click="toggle1 = !toggle1" class=" col-xs-12 btn">Return</button>
                                </div>

                                <div class="col-xs-6 col-sm-6 col-md-12 margin-top-10">
                                    <button type="submit" form="task" class="col-xs-12 btn btn-success">Save</button>
                                </div>
                            </div>
                        </div>
                        
                        <div class="visible-md visible-lg">
                            <div class="col-xs-12 col-sm-12 col-md-3 margin-top-10">
                                <div class="col-xs-6 col-sm-6 col-md-12 margin-10">
                                    <div class="row">
                                        <button ng-click="toggle1 = !toggle1" class=" col-xs-12 btn">Return</button>
                                    </div>
                                </div>

                                <div class="col-xs-6 col-sm-6 col-md-12 margin-top-10">
                                    <div class="row">
                                        <button type="submit" form="task" class="col-xs-12 btn btn-success">Save</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    {# angular input form end #}
                    
                    
                    {# working condition results #}
                    <div class="row">   
                        <div class="col-xs-12 col-sm-3 col-md-3">
                            <p class="visible-xs visible-sm pull-left">Working condition:</p>

                            <p class="hidden-xs hidden-sm pull-right">Working condition:</p>
                        </div>

                        <div class="col-xs-12 col-sm-9 col-md-6">

                        {% for element in workingcondition %}

                            <div class="row">
                                <div class="col-xs-12">
                                    <p><strong>{{ element.workingcondition }}</strong>({{ element.multiplier }})</p>
                                </div>
                            </div>

                        {% endfor %}

                        </div>
                        
                        <div class="col-xs-12 col-sm-12 col-md-3 margin-top-10">
                            <div class="margin-10">
                                <button ng-click="toggle1 = !toggle1" class="col-xs-12 btn">Modify</button>
                            </div>
                        </div>
                    </div>
                    {# working condition results end #}
                        
                </div>
                            
                <div class="clearfix"></div>
            </div>
            {# working condition segment end #}

            
            <div class="clearfix"></div>

            <hr class="style18 margin-bottom-10">
            
            
            {# fuel and def price segment #}
            <div class="well no-margin">
                <div class="col-xs-12 overlay-position workingcondition-group">
                    
                    {# form-angular #}
                    <div class="overlay-show" ng-show="toggle2">
                        <div class="col-xs-12 col-sm-12 col-md-9 tables">
                            <div class="row">
                                <div class="col-xs-12">

                                    <p><strong>Fuel Prices</strong><p>

                                    <div class="row">

                                        {# start table fuel price #}
                                        <div class="table-responsive border-black">
                                            <table class="table no-margin tables">
                                                <thead>
                                                    <tr>
                                                        <th class="col-xs-4"><strong>Currency</strong></th>
                                                        <th class="col-xs-4"><strong>Price/gallon</strong></th>
                                                        <th class="col-xs-4"><strong>Price/liter</strong></th>
                                                    </tr>
                                                </thead>
{# form fuel price/def start #}
                                                {{ form_start(formPrice, {'attr': {'id': 'task1'}}) }}
 
                                                    {% for form in formPrice.forms %}
                                                <tbody>
                                                    <td style="padding:10px;">
                                                        ${{ form.vars.value.currencyId.currency }}
                                                    </td>

                                                    <td>
                                                        {{ form_row(form.fuelPriceGallon) }}
                                                    </td>

                                                    <td>
                                                        {{ form_row(form.fuelPriceLiter) }}
                                                    </td>
                                                </tbody>
                                                
                                                    {% endfor %}                  

                                            </table>
                                        </div>
                                        {# end table fuel price #}
                                    </div>
                                </div>
                            </div>

                            <div class="row margin-top-30">
                                <div class="col-xs-12">

                                    <p><strong>DEF Price</strong><p>

                                    <div class="row">

                                        {# start table def price #}
                                        <div class="table-responsive border-black">
                                            <table class="table no-margin">
                                                <thead>
                                                    <tr>
                                                        <th class="col-xs-4"><strong>Currency</strong></th>
                                                        <th class="col-xs-4"><strong>Price/gallon</strong></th>
                                                        <th class="col-xs-4"><strong>Price/litter</strong></th>
                                                    </tr>
                                                </thead>

 
                                                    {% for form in formPrice.forms %}
                                                <tbody>
                                                    <td style="padding:10px;">
                                                        ${{ form.vars.value.currencyId.currency }}
                                                    </td>

                                                    <td>
                                                        {{ form_row(form.defPriceGallon) }}
                                                    </td>

                                                    <td>
                                                        {{ form_row(form.defPriceLiter) }}
                                                    </td>
                                                </tbody>
                                                
                                                    {% endfor %}                  

                                                {{ form_end(form) }}
{# form fuel/def end #}                                          
                                            </table>
                                        </div>
                                        {# end table def price #}
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-xs-12 col-sm-12 col-md-3 margin-top-10">
                            <div class="row">
                                <div class="col-xs-6 col-sm-6 col-md-12 margin-10">
                                    <button ng-click="toggle2 = !toggle2" class=" col-xs-12 btn">Return</button>
                                </div>

                                <div class="col-xs-6 col-sm-6 col-md-12 margin-top-10">
                                    <button type="submit" form="task1" class="col-xs-12 btn btn-success">Save</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    {# form-angular end #}
                    
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-9 tables">
                            <div class="row">
                                <div class="col-xs-12">

                                    <p><strong>Fuel Prices</strong><p>

                                    <div class="row">

                                        {# start table fuel price #}
                                        <div class="table-responsive border-black">
                                            <table class="table no-margin">
                                                <thead>
                                                    <tr>
                                                        <th class="col-xs-4"><strong>Currency</strong></th>
                                                        <th class="col-xs-4"><strong>Price/gallon</strong></th>
                                                        <th class="col-xs-4"><strong>Price/liter</strong></th>
                                                    </tr>
                                                </thead>

                                                {% for element in currency %}

                                                <tbody>
                                                    <td style="padding:10px;">
                                                        ${{ element.currency }}
                                                    </td>

                                                    <td>
                                                        {{ element.fuelId.fuelPriceGallon }}
                                                    </td>

                                                    <td>
                                                        {{ element.fuelId.fuelPriceLiter }}
                                                    </td>
                                                </tbody>

                                                {% endfor %}

                                            </table>
                                        </div>
                                        {# end table fuel price #}
                                    </div>
                                </div>
                            </div>

                            <div class="row margin-top-30">
                                <div class="col-xs-12">

                                    <p><strong>DEF Price</strong><p>

                                    <div class="row">

                                        {# start table def price #}
                                        <div class="table-responsive border-black">
                                            <table class="table no-margin">
                                                <thead>
                                                    <tr>
                                                        <th class="col-xs-4"><strong>Currency</strong></th>
                                                        <th class="col-xs-4"><strong>Price/gallon</strong></th>
                                                        <th class="col-xs-4"><strong>Price/litter</strong></th>
                                                    </tr>
                                                </thead>

                                                {% for element in currency %}

                                                <tbody>
                                                    <td style="padding:10px;">
                                                        ${{ element.currency }}
                                                    </td>

                                                    <td>
                                                        {{ element.fuelId.defPriceGallon }}
                                                    </td>

                                                    <td>
                                                        {{ element.fuelId.defPriceLiter }}
                                                    </td>
                                                </tbody>

                                                {% endfor %}

                                            </table>
                                        </div>
                                        {# end table def price #}
                                    </div>
                                </div>
                            </div>
                        </div>
                                
                        <div class="col-xs-12 col-sm-12 col-md-3 margin-top-10">
                            <div class="margin-10">
                                <button ng-click="toggle2 = !toggle2" class="col-xs-12 btn">Modify</button>
                            </div>
                        </div>
                    </div>
                </div>
                                
                <div class="clearfix"></div>
            </div>
            {# fuel and def price segment end #}

            <div class="clearfix"></div>

            <hr class="style18">
            
            
            <div class="well no-margin">
                <div class="col-xs-12 overlay-position workingcondition-group">
                    
                    {# form-angular #}
                    <div class="overlay-show" ng-show="toggle2">
                        <div class="col-xs-12 col-sm-12 col-md-9 tables">
                        </div>
                    </div>
                </div>
            </div>
                            
                            
            <div class="well no-margin">
                <div class="row row-eq-height">
                    <div class="col-xs-6 col-sm-4 text-center">
                        <p class="pull-right">DEF % rate:</p>
                    </div>
                    
                    <div class="col-xs-6 col-sm-4">
                        {% for element in currency %}
                            {% if element.isDefault == 'true' %}
                                <strong>{{ element.fuelId.defPercentageRate }} %</strong>
                            {% endif %}
                        {% endfor %}
                    </div>

                    <div class="col-sm-4 text-center position-relative hidden-xs">
                        <button class="btn center-block position-absolute">Modify</button>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-xs-12 text-center visible-xs ">
                        <button class="btn col-xs-12 center-block">Modify</button>
                    </div>
                </div>
                
                <div class="clearfix"></div>
            </div>

            <div class="clearfix"></div>

            <hr class="style18">
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}
