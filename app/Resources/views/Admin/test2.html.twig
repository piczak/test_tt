{% extends 'Admin/admin_header.html.twig' %}

{% block title %} - Master Lists Config{% endblock %}
{% block sitename %}Master Lists Config{% endblock %}
{% block page %}
    
    
    {% form_theme formProduct 'Theme/Calculator/calculator_form_theme.html.twig' %}
    

    <div class="container-fluid config" style="background-color:white;" ng-app="ngAnimate">
        {# side-nav sm-lg #}
        {% include 'Admin/admin_side_nav.html.twig' %}

        <div id="page-content-wrapper" class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2">
            <h1 class="page-header">MASTER LISTS CONFIG</h1>

            <div class="tabbable-panel">

                <div class="tabbable-line">
                    {{ dump(formProduct) }}

                    {{ form_start(formProduct) }}

                        {% for form in formProduct.forms %}
                            <div class="col-xs-12">
                                <div class="col-xs-4">
                            {{ form_row(form.product) }}
                                </div>

                                <div class="col-xs-4">
                            {{ form_row(form.isActive) }}
                                </div>
                                <div class="col-xs-4">
                            {% for form in form.forms %}
                                <div class="col-xs-6">
                                {{ form_row(form.model) }}
                                    </div>
                                    <div class="col-xs-6">
                                {{ form_row(form.isActive) }}
                                </div>
                            {% endfor %}
                                    </div>
                            </div>
                        {% endfor %}

                    {{ form_end(formProduct) }}
                </div>
            </div>
        </div>
    </div>
        
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(function() {
            $( "#sortable-default, #sortable-list" ).sortable({
                connectWith: ".connected-sortable",
                tolerance:"pointer"
            }).disableSelection();
        });
    </script>
{% endblock %}
