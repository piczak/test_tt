{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-flow admin">
        <div class="header">
            <div class="col-xs-6">
                <h4>TCO Administrator Page</h4>
            </div>

            <div class="col-xs-6 display-inline">
                <div class="pull-right">
                    <p class="display-inline margin-right">Welcome <strong>{{ app.user.username }}</strong></p>

                    <a class="display-inline" href="{{ path('logout') }}">
                        Logout <i class="fa fa-sign-out"></i>
                    </a>
                </div>
            </div>

            <div class="clearfix"></div>
        </div>
        
        <div class="main">
            <div class="col-xs-12 col-sm-3 col-md-3 col-lg-2 side-nav font-size-14">
                <div class="col-xs-6 col-sm-12">
                    <div class="row padding-side-1">
                        <a href="{{ path('admin_calculator_page') }}">
                            <button class="col-xs-12 margin-bottom-5 button-test">
                                <div class="row">
                                    Calculator Settings
                                </div>
                            </button>
                        </a>
                    </div>
                </div>
                
                <div class="col-xs-6 col-sm-12">
                    <div class="row padding-side-1">
                        <a href="">
                            <button class="col-xs-12 margin-bottom-5 button-test">
                                <div class="row">
                                    Master Tables Config
                                </div>
                            </button>
                        </a>
                    </div>
                </div>
                
                <div class="col-xs-6 col-sm-12">
                        <div class="row padding-side-1">
                        <a href="">
                            <button class="col-xs-12 margin-bottom-5 button-test">
                                <div class="row">
                                    SQT Updates
                                </div>
                            </button>
                        </a>
                    </div>
                </div>
                
                <div class="col-xs-6 col-sm-12">
                    <div class="row padding-side-1">
                        <a href="">
                            <button class="col-xs-12 margin-bottom-5 button-test">
                                <div class="row">
                                    Publish
                                </div>
                            </button>
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="col-xs-12 col-sm-9 col-lg-10 content">
                {% block content %}{% endblock %}
            </div>
            <div class="clearfix"></div>
        </div>          
    </div>
{% endblock %}
